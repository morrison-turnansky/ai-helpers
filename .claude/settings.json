{
  "includeCoAuthoredBy": true,
  "sandbox": {
      "enabled": true,
      "autoAllowBashIfSandboxed": true,
      "excludedCommands": [
          "podman"
      ],
      "filesystem": {
          "denyRead": [
              "~/.ssh"
          ],
          "allowWrite": [
              "."
          ],
          "denyWrite": [
              "~/",
              ".env"
          ]
      },
      "network": {
          "allowedDomains": [
              "github.com",
              "*.github.com",
              "gitlab.com",
              "*.gitlab.com",
              "gitlab.cee.redhat.com",
              "pypi.org"
          ],
          "deniedDomains": []
      },
      "enableWeakerNestedSandbox": false
  },
    "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/skill_activation_prompt.py"
          }
        ]
      }
    ]
  }
}
